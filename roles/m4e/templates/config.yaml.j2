# {{ name }} configmap
---
kind: ConfigMap
apiVersion: v1
{% include 'metadata.j2' ignore missing %}
data:
{% if config_environment | default(false) != false %}
  environment:
    {{ config_environment | indent(width=2) }}
{% endif %}
{% if config_conf | default(false) != false %}
  conf:
    {{ config_conf | indent(width=2) }}
{% endif %}
{% if config_entrypoint | default(false) != false %}
  entrypoint:
    {{ config_entrypoint | indent(width=2) }}
{% endif %}
