# Postgres deployment
---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: '{{ meta.name }}-{{ name }}'
  namespace: '{{ meta.namespace }}'
  labels:
    app: '{{ meta.name }}-{{ name }}'
spec:
  replicas: {{ postgres_size }}
  selector:
    matchLabels:
      app: '{{ meta.name }}-{{ name }}'
  template:
    metadata:
      labels:
        app: '{{ meta.name }}-{{ name }}'
    spec:
      containers:
      - image: '{{ postgres_image }}'
        name: '{{ meta.name }}-{{ name }}'
        volumeMounts:
        - mountPath: /var/lib/pgsql/data
          name: postgres-data
      volumes:
      - name: postgres-data
        emptyDir: {}
